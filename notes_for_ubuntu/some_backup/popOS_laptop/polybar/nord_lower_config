[module/pacman-update]
type = custom/script
exec = checkupdates | wc -l
# run only when wifi is connected. $? is the return value of wifi check.
# any value other than 0 stands for connection error. Hence, exec runs
# only when $? == 0
exec-if = "sleep 15 ; ping -c 1 -q google.com >&/dev/null; [ $? == 0 ]"
interval = 1000
format-prefix = " Ôã± "


[module/mymodule]
type = custom/script
exec = python $HOME/.config/polybar/mypolybar_script.py



